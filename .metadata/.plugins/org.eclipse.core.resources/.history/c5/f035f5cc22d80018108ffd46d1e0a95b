package Planario;

import java.awt.*;
import javax.swing.*;

public class Planaria extends JFrame {

	String ownerName = "";
	public int size = 0;
	Image skin;
	MyClient ownerIns;
	public float rotate;

	float posX, posY;

	public Planaria(int size, Image skin, MyClient ownerIns, float posX,
			float posY) {
		this.size = size;
		this.skin = skin;
		this.ownerIns = ownerIns;
		this.posX = posX;
		this.posY = posY;

		PlanariaThread pt = new PlanariaThread();
		pt.start();
	}

	public class PlanariaThread extends Thread{
		public void run() {
			
		}		
	}
	
	

	void Eat(Planaria target) {
		size += target.size;
		target.Death();
	}

	void Death() {
		ownerIns.Eaten();

	}

	public void Split() {
		new Planaria(size / 2, skin, ownerIns, posX, posY);
		size /= 2;
		ownerIns.lives++;
	}

	public void Move(float x, float y) {

	}

	void ReSize() {

	}
}
