package Planario;

import java.applet.Applet;
import java.awt.Image;

public class Planaria extends Thread {

	String ownerName = "";
	public int size = 0;
	Image skin;
	MyClient ownerIns;
	public float rotate;
	
	float posX, posY;
	
	public Planaria(int size, Image skin, MyClient ownerIns, float posX, float posY){
		this.size = size;
		this.skin = skin;
		this.ownerIns = ownerIns;
		this.posX = posX;
		this.posY = posY;
		
		start();
	}
	
	public void run(){
		
	}
	
	void Eat(Planaria target){
		size += target.size;
		target.Death();
	}
	
	void Death(){
		ownerIns.Eaten();
		
	}
	
	public void Split(){
		Planaria child = new Planaria(size/2, skin, ownerIns, posX, posY);
	}
	
	public void Move(){
		
	}
	
	void ReSize(){
		
	}
}
